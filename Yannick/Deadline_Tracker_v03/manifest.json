{
  "manifest_version": 3,
  "name": "Abgabetermin Highlighter",
  "version": "1.0",
  "description": "Highlight Abgabetermin and Abgabefrist on web pages",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
