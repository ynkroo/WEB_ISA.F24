{
    "manifest_version": 3,
    "name": "ECTS Counter for HSLU",
    "version": "1.0.0",
    "description": "Tracks and displays ECTS points from MyCampus HSLU.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "https://mycampus.hslu.ch/"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}
